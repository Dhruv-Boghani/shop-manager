<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Shop - MyShop</title>
  <link href="/css/add-shop.css" rel="stylesheet">
  <link href="/css/navbar.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="shop-container">
    <div class="shop-card">
      <div class="card-body">
        <h3 class="shop-title">Add New Shop</h3>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
          <div class="alert-danger">
            <ul>
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        <form method="POST" action="/shop">
          <div class="form-group">
            <label for="name">Shop Name</label>
            <input type="text" name="name" id="name" required />
          </div>

          <div class="form-group">
            <label for="address">Address</label>
            <textarea name="address" id="address" rows="2" required></textarea>
          </div>

          <div class="form-group">
            <label for="productSelect">Select Products</label>
            <select id="productSelect" name="product" multiple>
              <% products.forEach(product => { %>
                <option value="<%= product._id %>"><%= product.name %> (<%= product.productSKU %>)</option>
              <% }) %>
            </select>
          </div>

          <button type="submit" class="submit-btn">Create Shop</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const element = document.getElementById('productSelect');
      new Choices(element, {
        removeItemButton: true,
        searchEnabled: true,
        placeholderValue: 'Select products'
      });
    });
  </script>
</body>
</html>
